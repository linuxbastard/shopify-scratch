/*Page Header Slider Container*/
.header-slider-container {
  height: 47.22%;
  &, .flex-container {
    &, .page-header-content {
      position: relative;
    }
  }
  .flex-container {
    position: relative;
    height: 47.222222vw;
    margin: 0 auto;
    max-height: 680px;
    overflow: hidden;
    .page-header-content {
      margin: 0 auto;
      padding: 20px;
      width: 100%;
      @media screen and (min-width: 75em) {
        height: 47.22%;
      }
      h1 {
        &.header-banner {
          color: $white;
          letter-spacing: -1px;
          line-height: 1.3;
        }
      }
      .header-button {
        a {
          border: $btn-border $white;
          border-radius: $btn-radius;
          color: #fff;
          display: block;
          font-family: $default-font-stack;
          font-size: 1.3333334em;
          font-weight: 700;
          height: 36px;
          line-height: 30px;
          margin: 0 auto;
          max-width: 160px;
          padding: 0;
          text-align: center;
          width: 70%;
          &:hover {
            background-color: $lyfegreen;
          }
        }
      }
    }
  }
