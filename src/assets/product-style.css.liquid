.product-tabs .full-width-content {
  border-top-color: transparent;
}
.product-tabs .full-width-content .tab-container {
  padding-left: 40% !important;
  padding-right: 40% !important;
}
.product-tabs .full-width-content ul.tabs li.active {
  border: 1px solid #1f9c97 !important;
  border-radius: 18px !important;
}
.product-tabs .full-width-content ul.tabs li a {
  padding-top: 5px !important;
  padding-bottom: 5px !important;
}
