{% paginate blog.articles by 3 %}
<div class="container-wrap">
    <div class="container main-content">
        <div class="row">
            <div id="post-area" class="col span_12 infinite_scroll">
                <div class="posts-container" data-load-animation="none">
                    <div class="row">
                        {% for article in blog.articles %}
                            <article
                                    class="col span_4 regular post type-post status-publish format-standard has-post-thumbnail hentry"
                                    style="margin-right: 1%;">
                                <div class="inner-wrap animated">
                                    <div class="post-content" style="padding-left: 0;">
                                        <div class="content-inner">
                                            <a href="{{ article.url }}"><span class="post-featured-img">
  <img src="{{ article.image.src | img_url: 'original' }}" class="attachment-full size-full wp-post-image" alt=""
       title=""/></span></a>
                                            <div class="article-content-wrap">
                                                <div class="post-header">
                                                    <h2 class="title">
                                                        <a href="{{ article.url }}"
                                                           style="color: #000 !important; text-transform: uppercase;"> {{ article.title }} </a>
                                                    </h2>
                                                    <span class="meta-author"
                                                          style="color: #000;"><span>By</span> {{ article.author }}</span>
                                                </div>
                                                <div class="excerpt"
                                                     style="color: #000;">{{ article.content | truncatewords:50 }}</div>
                                                <a class="more-link" href="{{ article.url }}"
                                                   style="text-transform: uppercase;"><span
                                                            class="continue-reading"
                                                            style="background-color: transparent; color: #000; border: 1px solid #000;">Read More</span></a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </article>
                        {% endfor %}
                    </div>
                </div>
                {% if paginate.pages > 1 %}
                    <div id="pagination" data-is-text="All items loaded">
                        <div class="prev"></div>
                        {% if paginate.previous.is_link %}
                            <a href="{{ paginate.previous.url }}">Â« Previous Entries</a>
                        {% endif %}
                        <div class="next">
                            {% if paginate.next.is_link %}
                                <a href="{{ paginate.next.url }}">Next Entries Â»</a>
                            {% endif %}
                        </div>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>
{% endpaginate %}
